<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lcxs.mapper.news.newsBeanMapper" >
  <resultMap id="NewsResultMap" type="com.lcxs.model.news.newsBean" >

    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="title" property="title" jdbcType="VARCHAR" />
    <result column="context" property="context" jdbcType="VARCHAR" />
    <result column="source" property="source" jdbcType="VARCHAR" />
    <result column="praise" property="praise" jdbcType="BIGINT" />
    <result column="collection" property="collection" jdbcType="BIGINT" />
    <result column="ntime" property="ntime" jdbcType="VARCHAR" />
    <result column="imgurl" property="imgurl" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="News_Column_List" >
    id, title, context, source, praise, collection, ntime, imgurl
  </sql>

  <select id="queryAll" resultType="com.lcxs.model.news.newsBean" parameterType="com.lcxs.utils.BaseConditionVO" >
    select
    <include refid="News_Column_List" />
    from c_news
  </select>


</mapper>